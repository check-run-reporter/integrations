{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/types",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2021", // node 16
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./integrations/**/*.ts"
  ]
}
